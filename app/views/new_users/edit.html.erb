<% if @current_user.role == "owner" %>
<% user = User.find(params[:id]) %>

<div class="page-container">
  <div class="edit">
    <h5>Please fill out the fields you want to change:</h5>
    <div class="edit-form-div">Current <%= user.role %>'s first name: <h5><%= user.first_name %></h5> </div>
    <div class="edit-form-div">Current <%= user.role %>'s last name: <h5><%= user.last_name %></h5> </div>
    <div class="edit-form-div">Current <%= user.role %>'s email: <h5><%= user.email %></h5> </div>

    <%= form_with(url: "/new_users/#{user.id}", method: "put") do %>
      <div class="edit-form-div">
        New first name for '<%= user.first_name %> <%= user.last_name %>':
        <div><%= text_field_tag "first_name", nil, placeholder: "New first name", class: "new-shop-input" %></div>
      </div>
      <div class="edit-form-div">
        New last name for '<%= user.first_name %> <%= user.last_name %>':
        <div><%= text_field_tag "last_name", nil, placeholder: "New last name", class: "new-shop-input" %></div>
      </div>
      <div class="edit-form-div">
        New email for '<%= user.first_name %> <%= user.last_name %>':
        <div><%= text_field_tag "email", nil, placeholder: "New email", class: "new-shop-input" %></div>
      </div>
      <div class="edit-form-div">
        New password for '<%= user.first_name %> <%= user.last_name %>':
        <div><%= password_field_tag "password", nil, placeholder: "New password", class: "new-shop-input" %></div>
      </div>
      <div><%= submit_tag "Duro!", class: "button edit-form-div" %></div>
    <% end %>
    <%= button_to "Reverte!", all_users_path, method: "get", class: "button button-e" %>

  </div>
</div>

<% else %>
  <% flash[:error] = "You do not have access to this page" %>
  <div class="checkout-container">
    <div class="all-or-container">
      <%= button_to "Reverte!", shops_path, method: "get", class: "button" %>
    </div>
  </div>
<% end %>
